{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "schedule": [
    "before 6am on the first day of the month"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "schedule": [
        "* * * * 1"
      ],
      "prConcurrentLimit": 1
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "schedule": [
        "before 6am on monday"
      ],
      "prConcurrentLimit": 1
    }
  ]
}