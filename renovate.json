{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 1,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "schedule": [
        "before 6am on monday"
      ],
      "groupName": "union"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "schedule": [
        "before 6am on the first day of the month"
      ],
      "groupName": "union"
    }
  ]
}